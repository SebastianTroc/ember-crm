<article id="leads">
  <h1>
    Leads
    <small>{{#link-to 'leads.new'}}New Lead{{/link-to}}</small>
  </h1>

  {{view Ember.TextField value=searchPhrase placeholder="search" classNames="search"}}

  <ul>
    {{#each lead in leads}}
      {{#link-to 'lead' lead tagName="li"}}
        {{lead.fullName}}
      {{/link-to}}
    {{/each}}
  </ul>

</article>
{{outlet}}